@model ManageExport_V2.Models.Entity.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = $"{Model.Name}/{Model.MainImage}";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MainImage)
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrEmpty(Model.MainImage))
            {
                <img style="width:300px;" src="~/images/People/images96.jpg" />

            }
            else
            {
                <img style="width: 300px;" src="~/images/Products/@url" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MFG)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MFG)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EXP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EXP)
        </dd>
      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecieveDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecieveDate)
        </dd>
